{% extends 'backend/layout.html.twig' %}

{% block title %}Ver Cliente{% endblock %}

{% block content_header %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Cliente</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('backend/client/_delete_form.html.twig') }}
                    {% endif %}
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        {#                        <img class="profile-user-img img-fluid img-circle" src="{{ vich_uploader_asset(agent, 'thumbnailFile') }}" alt="{{ agent.thumbnail }}">#}
                    </div>

                    <h3 class="profile-username text-center">{{ client.fullName }}</h3>

                    <p class="text-muted text-center">{{ client.fullName }}</p>

                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Visitas</b> <a class="float-right">0</a>
                        </li>
                        <li class="list-group-item">
                            <b>Following</b> <a class="float-right">543</a>
                        </li>
                        <li class="list-group-item">
                            <b>Friends</b> <a class="float-right">13,287</a>
                        </li>
                    </ul>

                    <div class="btn-group">
                        <a class="btn btn-link" href="{{ path('client_index') }}">Volver a la lista</a>
                        <a class="btn btn-info" href="{{ path('client_edit', {'id': client.id}) }}">Editar</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Sobre {{ client.fullName }}</h3>
                </div>
                <div class="card-body">
                    <strong><i class="fas fa-book mr-1"></i> Información</strong>

                    <p class="text-muted">
                        <b>Correo: </b>{{ client.email }}
                    </p>

                    <hr>

                    <strong><i class="fas fa-map-marker-alt mr-1"></i> Agencia</strong>

                    <p class="text-muted">{{ client.agent.agency.name }}</p>

                    <hr>

                    <strong><i class="fas fa-pencil-alt mr-1"></i> Otros</strong>

                    <ul class="list-group list-group-unbordered mb-3 text-muted">
                        <li class="list-group-item">
                            <b>Móvil</b> <span> {{ client.mobile }}</span>
                        </li>
                        <li class="list-group-item">
                            <b>Teléfono: </b> <span> {{ client.telephone }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
