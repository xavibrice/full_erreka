{% extends 'backend/layout.html.twig' %}

{% block title %}Listado Propiedades{% endblock %}

{% block content %}
    <h1>Property index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creado</th>
                <th>Precio</th>
                <th>Portal</th>
                <th>Piso</th>
                <th>Comentario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for property in properties %}
            <tr>
                <td>{{ property.id }}</td>
                <td>{{ property.created ? property.created|date('d-m-Y') : '' }}</td>
                <td>{{ property.price|format_currency('EUR', {rounding_mode: 'floor'}) }}</td>
                <td>{{ property.portal }}</td>
                <td>{{ property.floor }}</td>
                <td>{{ property.comment|truncate }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="{{ path('property_show', {'id': property.id}) }}">Ver</a>
                        <a class="btn btn-info" href="{{ path('property_edit', {'id': property.id}) }}">Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('property_new') }}">Create new</a>
{% endblock %}
