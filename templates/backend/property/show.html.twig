{% extends 'backend/layout.html.twig' %}

{% block title %}Ver Propiedad{% endblock %}

{% block content_header %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Propiedad</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('backend/property/_delete_form.html.twig') }}
                    {% endif %}
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        {#                        <img class="profile-user-img img-fluid img-circle" src="{{ vich_uploader_asset(agent, 'thumbnailFile') }}" alt="{{ agent.thumbnail }}">#}
                    </div>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ property.id }}</td>
                            </tr>
                            <tr>
                                <th>Precio</th>
                                <td>{{ property.price|format_currency('EUR') }}</td>
                            </tr>
                            <tr>
                                <th>Portal</th>
                                <td>{{ property.portal }}</td>
                            </tr>
                            <tr>
                                <th>Piso</th>
                                <td>{{ property.floor }}</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td>{{ property.comment }}</td>
                            </tr>
                            <tr>
                                <th>Creado</th>
                                <td>{{ property.created ? property.created|date('d-m-Y') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-link" href="{{ path('property_index') }}">Volver a la lista</a>

                    <a class="btn btn-info" href="{{ path('property_edit', {'id': property.id}) }}">Editar</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
