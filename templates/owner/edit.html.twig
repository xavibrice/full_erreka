{% extends 'default/layout.html.twig' %}

{% block title %}Editar Propietario {{ owner.fullName }}{% endblock %}

{% block content_header %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Propietario</h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row d-flex justify-content-center">
        <div class="col-xl-6">
            <div class="card card-primary card-outline card-columns">
                <div class="card-header">
                    <h3 class="card-title">Editar propietario</h3>
                </div>
                <div class="card-body">
                    {{ include('owner/_form.html.twig', {'button_label': 'Actualizar'}) }}
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" href="{{ path('owner_show', {'id': owner.id}) }}">Ver propietario</a>
                    <a class="btn btn-link" href="{{ path('owner_index') }}">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}