{% extends 'default/layout.html.twig' %}

{% block title %}Listado Agencias{% endblock %}

{% block content_header %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0 text-dark">Agencias</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a class="btn btn-primary" href="{{ path('agency_new') }}">Crear agencia</a></li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="card card-primary card-outline card-columns">
                <div class="card-header">
                    <h3 class="card-title">Listado Agencias</h3>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for agency in agencies %}
                            <tr>
                                <td>{{ agency.id }}</td>
                                <td>{{ agency.name }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-secondary" href="{{ path('agency_show', {'slug': agency.slug}) }}">Ver</a>
                                        <a class="btn btn-info" href="{{ path('agency_edit', {'slug': agency.slug}) }}">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
