{% extends 'base.html.twig' %}

{% block title %}Agente{% endblock %}

{% block body %}
    <h1>Agente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ agent.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ agent.password }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ agent.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ agent.email }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ agent.thumbnail }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ agent.color }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ agent.createdAt ? agent.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ agent.updatedAt ? agent.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('agent_index') }}">Volver a la lista</a>

    <a href="{{ path('agent_edit', {'id': agent.id}) }}">Editar</a>

    {{ include('admin/agent/_delete_form.html.twig') }}
{% endblock %}
